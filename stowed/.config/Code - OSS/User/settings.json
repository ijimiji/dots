{
  // Builtin settings
  "terminal.integrated.fontSize": 20,
  "editor.fontSize": 20,
  "editor.fontFamily": "'FantasqueSansMono Nerd Font', 'Apple Color Emoji'",
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "phase",
  "editor.scrollbar.verticalScrollbarSize": 15,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.guides.bracketPairs": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.iconClickBehavior": "focus",
  "workbench.activityBar.visible": false,
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "hidden",
  "extensions.ignoreRecommendations": true,
  "breadcrumbs.enabled": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "files.associations": {
    "*.txt": "markdown"
  },
  // Extension settings
  // Latex
  "latex-workshop.view.pdf.viewer": "tab",
  // C++
  "clangd.path": "/home/jahor/.config/Code - OSS/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/14.0.0/clangd_14.0.0/bin/clangd",
  "cmake.configureOnOpen": true,
  // Vim settings
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-b>": false
  },
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "after": [
        ">",
        "g",
        "v"
      ]
    },
    {
      "before": [
        "<"
      ],
      "after": [
        "<",
        "g",
        "v"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "<leader>",
        "R"
      ],
      "commands": [
        "editor.action.refactor"
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        "editor.action.rename"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    {
      "before": [
        "<leader>",
        "j"
      ],
      "commands": [
        "editor.action.marker.nextInFiles"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "<leader>",
        "k"
      ],
      "commands": [
        "editor.action.marker.prevInFiles"
      ]
    },
    {
      "before": [
        "n"
      ],
      "after": [
        "z",
        "z",
        "n"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "N"
      ],
      "after": [
        "z",
        "z",
        "N"
      ]
    },
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "$"
      ]
    },
    {
      "before": [
        "<leader>",
        "<leader>"
      ],
      "commands": [
        "editor.toggleFold"
      ]
    }
  ],
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "Lua.telemetry.enable": false,
}